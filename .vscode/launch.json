{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Poet",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/poet/main.py",
            "cwd": "${workspaceFolder}/poet",
            "console": "integratedTerminal"
        }
    ]
}